<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    <OnPlatform x:Key="Primary" x:TypeArguments="Color" Default="#512BD4">
        <On Platform="Android" Value="#E05B4B"/>
    </OnPlatform>
    <OnPlatform x:Key="PrimaryDark" x:TypeArguments="Color" Default="#ac99ea">
        <On Platform="Android" Value="#A1392E"/>
    </OnPlatform>
    <OnPlatform x:Key="PrimaryDarkText" x:TypeArguments="Color" Default="#242424">
        <On Platform="Android" Value="#4B1F1A"/>
    </OnPlatform>
    <OnPlatform x:Key="Secondary" x:TypeArguments="Color" Default="#DFD8F7">
        <On Platform="Android" Value="#F3B89B"/>
    </OnPlatform>
    <OnPlatform x:Key="SecondaryDarkText" x:TypeArguments="Color" Default="#9880e5">
        <On Platform="Android" Value="#752F23"/>
    </OnPlatform>
    <OnPlatform x:Key="Tertiary" x:TypeArguments="Color" Default="#2B0B98">
        <On Platform="Android" Value="#D44A2F"/>
    </OnPlatform>
    <OnPlatform x:Key="DarkBackground" x:TypeArguments="Color" Default="#17171a">
        <On Platform="Android" Value="#3B1612"/>
    </OnPlatform>
    <OnPlatform x:Key="LightOnDarkBackground" x:TypeArguments="Color" Default="#C3C3C3">
        <On Platform="Android" Value="#FCE9E3"/>
    </OnPlatform>
    <OnPlatform x:Key="LightBackground" x:TypeArguments="Color" Default="#F2F2F2">
        <On Platform="Android" Value="#FFEDE7"/>
    </OnPlatform>
    <OnPlatform x:Key="DarkOnLightBackground" x:TypeArguments="Color" Default="#0D0D0D">
        <On Platform="Android" Value="#3A1A16"/>
    </OnPlatform>
    <OnPlatform x:Key="LightSecondaryBackground" x:TypeArguments="Color" Default="#E0E0E0">
        <On Platform="Android" Value="#FFD4C3"/>
    </OnPlatform>
    <OnPlatform x:Key="DarkSecondaryBackground" x:TypeArguments="Color" Default="#222228">
        <On Platform="Android" Value="#471A14"/>
    </OnPlatform>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>